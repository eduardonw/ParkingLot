    private GUICadastroDeFuncionario guiCadastroDefuncionario;
    
    public void setPosicao() {
        Dimension d = this.getDesktopPane().getSize();
        this.setLocation((d.width - this.getSize().width) / 6, (d.height -
                this.getSize().height) / 6);
    }
    
    private void abrirGUICadastroDeFuncionario(Funcionario funcionario){
        if((guiCadastroDefuncionario == null) || (!guiCadastroDefuncionario.isVisible())){
            guiCadastroDefuncionario = new GUICadastroDeFuncionario();
            OuvinteDeGUICadastroDeFuncionario ouvinte = new
                    OuvinteDeGUICadastroDeFuncionario(guiCadastroDefuncionario);
            this.getParent().add(guiCadastroDefuncionario);
            guiCadastroDefuncionario.setPosicao();
            guiCadastroDefuncionario.setVisible(true);
            
            guiCadastroDefuncionario.setFuncionario(funcionario);
         }
        try {
            guiCadastroDefuncionario.setSelected(true);
        } catch (PropertyVetoException exc){
            StringBuffer mensagem = new StringBuffer();
            mensagem.append("Não foi possível selecionar a janela de cadastro!");
            mensagem.append("\nMotivo: " + exc.getMessage());
            GUIMensagem.exibirMensagem(mensagem.toString(), "ParkingLot - Cadastro de funcionário", true);
        }
    }

